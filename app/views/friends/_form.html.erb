    <div class="field form-group">
      <% form.label :last_name%>
      <%= form.text_field :last_name, class:'form-control',placeholder:"Last Name" %>
    </div><br>

    <div class="field form-group">
      <% form.label :email%>
      <%= form.text_field :email, class:'form-control',placeholder:"Email" %>
    </div><br>

    <div class="field form-group">
      <%form.label :phone_no%>
      <%= form.text_field :phone_no, class:'form-control',placeholder:"Phone number" %>
    </div><br>

    <div class="field form-group">
      <% form.label :instagram%>
      <%= form.text_field :instagram, class:'form-control',placeholder:"Insta Handle" %>
    </div><br>

    <div class="actions">
      <%= form.submit class:'btn btn-secondary'%>
    </div>
  <% end %>
</div>
