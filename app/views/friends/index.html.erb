
<div class="container">
  <h1>Friends</h1>

  <div id="friends">
  <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>First Name</th>
          <th> Last Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Instagram</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone_no %></td>
          <td><%= friend.instagram %></td>
          <td><%= link_to 'Show',friend %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend)%></td>
          <td><%= button_to 'Destroy', friend, :method => 'delete', data: { confirm: 'Are you Sure?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New friend", new_friend_path, class:'btn btn-secondary' %>
</div>