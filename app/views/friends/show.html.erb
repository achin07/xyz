
<div class="container">
  <p>
    <strong>First Name:</strong>
    <%=@friend.first_name%>
  </p>
  <p>
    <strong>Last Name:</strong>
    <%=@friend.last_name%>
  </p>
  <p>
    <strong>Email:</strong>
    <%=@friend.email%>
  </p>
  <p>
    <strong>Phone Number:</strong>
    <%=@friend.phone_no%>
  </p>
  <p>
    <strong>Instagram ID:</strong>
    <%=@friend.instagram%>
  </p>

  <%= link_to 'Edit',edit_friend_path(@friend), class:'btn btn-secondary' %>
  <%= link_to 'Back',friends_path, class:'btn btn-secondary' %>
  
  <%= link_to 'Destroy',@friend, :method => 'delete'%>
</div>
